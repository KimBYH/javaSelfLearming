<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
<div id="comments-list">
    <div class="card m-2" id="comments-id">
        <div class="card-header">
            <!-- modal창으로 가게 해주는 버튼 -->
            <button type="button"
                    id="trigger-btn"
                    data-bs-toggle="modal"
                    data-bs-target="#exampleModal"
                    data-custom-title="점심 뭐 먹지?"
                    data-custom-text="돈까스 어때?">
                트리거 버튼
            </button>
        </div>
    </div>
</div>

    <div class="modal fade" id="exampleModal" tabindex="-1"
         aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="modal-title">???</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="modal-text">.....</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        const trigger = document.querySelector("#exampleModal");

        trigger.addEventListener("show.bs.modal", (e) => {
            const btn = e.relatedTarget;

            const title = btn.getAttribute("data-custom-title");
            const text = btn.getAttribute("data-custom-text");

            document.querySelector("#modal-title").innerText = title;
            document.querySelector("#modal-text").innerText = text;
        })
    </script>
</body>
</html>
